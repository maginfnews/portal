// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id               String   @id @default(cuid())
  nome             String
  cnpj             String?  @unique
  contatoPrincipal String?
  ativo            Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relacionamentos
  users             User[]
  servers           Server[]
  workstations      Workstation[]
  backupJobs        BackupJob[]
  alerts            Alert[]
  integrationConfigs IntegrationConfig[]

  @@map("tenants")
}

model User {
  id            String    @id @default(cuid())
  nome          String
  email         String    @unique
  senhaHash     String?   // Opcional para OAuth users
  role          String    @default("CLIENTE_USER") // MAGINF_ADMIN, CLIENTE_ADMIN, CLIENTE_USER
  tenantId      String?
  ativo         Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // NextAuth.js fields
  name          String?
  image         String?
  emailVerified DateTime?

  // Relacionamentos
  tenant   Tenant?   @relation(fields: [tenantId], references: [id])
  accounts Account[]
  sessions Session[]

  @@map("users")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Server {
  id                String   @id @default(cuid())
  tenantId          String
  nome              String
  ip                String
  sistemaOperacional String?
  status            String   @default("OFFLINE") // ONLINE, OFFLINE, ALERTA
  cpuUsoPercent     Float?
  memoriaUsoPercent Float?
  discoUsoPercent   Float?
  ultimoCheckEm     DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relacionamentos
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@map("servers")
}

model Workstation {
  id                  String   @id @default(cuid())
  tenantId            String
  nome                String
  usuarioResponsavel  String?
  ip                  String?
  status              String   @default("OFFLINE") // ONLINE, OFFLINE, ALERTA
  ultimoCheckEm       DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relacionamentos
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@map("workstations")
}

model BackupJob {
  id                        String   @id @default(cuid())
  tenantId                  String
  nome                      String
  tipoAlvo                  String   // SERVIDOR, ESTACAO
  alvoId                    String   // ID do servidor ou estação
  provedor                  String   @default("MOCK") // COVE, VEEAM, etc.
  ultimaExecucaoEm          DateTime?
  ultimaExecucaoStatus      String?  // SUCESSO, FALHA, EM_ANDAMENTO
  tamanhoUltimoBackupGB     Float?
  retencaoDias              Int      @default(30)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  // Relacionamentos
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@map("backup_jobs")
}

model Alert {
  id          String   @id @default(cuid())
  tenantId    String
  tipo        String   // CPU_ALTA, MEMORIA_ALTA, DISCO_CHEIO, BACKUP_FALHO, SERVIDOR_OFFLINE, ESTACAO_OFFLINE, OUTRO
  severidade  String   // INFO, WARNING, CRITICAL
  mensagem    String
  origem      String   // SERVIDOR, ESTACAO, BACKUP
  origemId    String   // ID do servidor, estação ou backup job
  resolvido   Boolean  @default(false)
  resolvidoEm DateTime?
  criadoEm    DateTime @default(now())

  // Relacionamentos
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@map("alerts")
}

model IntegrationConfig {
  id           String   @id @default(cuid())
  tenantId     String
  tipo         String   // MONITORING, BACKUP
  provedor     String   // SITE24X7, COVE, ZABBIX, etc.
  apiKey       String?  // Criptografado
  endpointBase String?
  ativo        Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacionamentos
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@map("integration_configs")
}
